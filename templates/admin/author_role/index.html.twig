{% extends 'layout_admin.html.twig' %}

{% block title %}AuthorRole index{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="text-center m-5">Les rôles d'auteur</h1>
        <a class="btn btn-darker" href="{{ path('admin_author_role_new') }}">
            Créer un rôle
        </a>
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Rôle</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for authorRole in authorRoles %}
                <tr>
                    <td>{{ authorRole.id }}</td>
                    <td>{{ authorRole.role }}</td>
                    <td class="d-flex">
                        <a class="btn btn-darker mr-4" href="{{ path('admin_author_role_edit', {'id': authorRole.id}) }}">modifier</a>
                        {{ include('admin/author_role/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun élément trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
