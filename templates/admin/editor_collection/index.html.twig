{% extends 'layout_admin.html.twig' %}

{% block title %}EditorCollection index{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="text-center m-5">Les collections</h1>
        <a class="btn btn-darker" href="{{ path('admin_collection_new') }}">
            Créer une collection
        </a>
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Editeur</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for editorCollection in editorCollections %}
                <tr>
                    <td>{{ editorCollection.id }}</td>
                    <td>{{ editorCollection.name }}</td>
                    <td>{{ editorCollection.editor.name }}</td>
                    <td class="d-flex">
                        <a class="btn btn-darker mr-4" href="{{ path('admin_collection_edit', {'id': editorCollection.id}) }}">modifier</a>
                        {{ include('admin/editor_collection/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun élément trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
