<form method="post" action="{{ path('admin_collection_delete', {'id': editorCollection.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ editorCollection.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
