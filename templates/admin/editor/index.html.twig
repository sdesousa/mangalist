{% extends 'layout_admin.html.twig' %}

{% block title %}Editor index{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="text-center m-5">Les éditeurs</h1>
        <a class="btn btn-darker" href="{{ path('admin_editor_new') }}">
            Créer un éditeur
        </a>
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for editor in editors %}
                <tr>
                    <td>{{ editor.id }}</td>
                    <td>{{ editor.name }}</td>
                    <td class="d-flex">
                        <a class="btn btn-darker mr-4" href="{{ path('admin_editor_edit', {'id': editor.id}) }}">modifier</a>
                        {{ include('admin/editor/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun élément trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
