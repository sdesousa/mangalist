{% extends 'layout.html.twig' %}

{% block title %}Manga index{% endblock %}

{% block body %}

    <main class="container-fluid">
        <h1 class="">Manga index</h1>

        <table class="table table-hover">
            <thead>
            <tr>
                <th>Titre</th>
                <th>Volumes</th>
                <th>Disponible</th>
                <th>Editeur</th>
                <th>Collection</th>
                <th>Ann√©e</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for manga in mangas %}
                <tr>
                    <td>{{ manga.title }}</td>
                    <td>{{ manga.totalVolume }}</td>
                    <td>{{ manga.availableVolume }}</td>
                    <td>{{ manga.editor.name }}</td>
                    <td>{{ manga.editorCollection.name }}</td>
                    <td>{{ manga.year }}</td>
                    <td></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </main>

{% endblock %}
